<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property
                name="connection.url">jdbc:mysql://localhost:3306/carsForSale?createDatabaseIfNotExist=true&amp;useSSL=false
        </property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>

        <!--Creeaza tabelele la pornirea aplicatiei-->
        <property name="hbm2ddl.auto">create</property>
        <property name="hibernate.hbm2ddl.import_files">import.sql</property>


        <!-- Echo the SQL to stdout -->
        <property name="show_sql">false</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>

        <mapping class="ro.itschool.entity.Owner"/>
        <mapping class="ro.itschool.entity.Vehicle"/>
    </session-factory>
</hibernate-configuration>